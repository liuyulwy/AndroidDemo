<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/bitmap_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="bitmap_drawable"/>
    <Button
        android:id="@+id/shape_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="shape_drawable"/>
    <Button
        android:id="@+id/state_list_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="state_list_drawable"/>
    <Button
        android:id="@+id/layer_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="layer_drawable"/>
    <Button
        android:id="@+id/level_list_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="level_list_drawable"/>
    <Button
        android:id="@+id/inset_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="inset_drawable"/>
    <Button
        android:id="@+id/scale_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="scale_drawable"/>
    <Button
        android:id="@+id/clip_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="clip_drawable"/>
    <Button
        android:id="@+id/rotate_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="rotate_drawable"/>
    <Button
        android:id="@+id/transition_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="itemClick"
        android:text="transition_drawable"/>


</LinearLayout>